<h3 class = "log-date"><strong>Showing log for : <%= @date %></strong></h3>

<div class = "show-log">
	<div class = "well">
<table>
	<% @messages.each do |msg| %>
	<tr>
		<td><%= msg %></td>
	</tr>
	<% end %>
</table>
</div>
</div>
<div class = "arrow">
<% if(!@prev.nil?) %>
<div class = "prev"> <%= link_to(image_tag("prev.png", :alt => "Previous log"),{:action => 'show', :key => @prev}) %> </div>
<% end %>
<% if(!@next.nil?) %>
<div class = "next"> <%= link_to(image_tag("next.png", :alt => "Next log"),{:action => 'show', :key => @next}) %> </div>
<% end %>
</div>

<%= link_to("Back" ,{:controller => 'logger', :action => 'home'}, :class => 'btn btn-primary') %>